<configuration>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
			</pattern>
		</encoder>
	</appender>
	<appender name="FILE_ERROR" class="ch.qos.logback.core.FileAppender">
		<file>csparql_server_error.log</file>
		<append>true</append>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ERROR</level>
		</filter>
		<encoder>
			<pattern>
				%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
			</pattern>
		</encoder>
	</appender>
	<appender name="FILE_DEBUG" class="ch.qos.logback.core.FileAppender">
		<file>csparql_server_debug.log</file>
		<append>true</append>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>DEBUG</level>
		</filter>
		<encoder>
			<pattern>
				%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="eu.deib.polimi.configuration.Config" level="INFO" />
	<logger name="org.apache.http" level="ERROR" />
	<logger name="com.hp.hpl.jena" level="ERROR" />
	<logger name="com.espertech.esper" level="ERROR" />
	<logger name="org.apache.commons" level="ERROR" />
	<logger name="ch.qos.logback" level="ERROR" />

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>
	<root level="ERROR">
		<appender-ref ref="FILE_ERROR" />
	</root>
	<root level="DEBUG">
		<appender-ref ref="FILE_DEBUG" />
	</root>

</configuration>